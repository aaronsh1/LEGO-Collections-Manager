@model LegoCollectionManager.Models.UserAvatar

@{
    ViewData["Title"] = "AddAvatar";
}

<h1>AddAvatar</h1>

<h4>UserAvatar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAvatar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @foreach(var avatar in @ViewBag.Avatars)
                {
                    <input name="Avatar" id=@avatar.Value type="radio" value=@avatar.Value />
                    <img src=@avatar.Text style="width: 150px"/>
    
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
