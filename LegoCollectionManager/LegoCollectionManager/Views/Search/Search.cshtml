@model IEnumerable<LegoCollectionManager.DTO.SearchResultDTO>;

@{
    ViewData["Title"] = "Search Results";
}

<h1>Search Results:</h1>

<div class="d-flex flex-row flex-wrap">

    @foreach (var item in Model)
    {
        <div class="card" style="width:400px; margin:5px;">
            <div class="card-header d-flex justify-content-between align-items-center">
                <a href="/Set/Details/@item.setId"><span style="margin-right:20px">@item.setDTO.Name</span></a>
                <span>@Math.Round(item.matchPercentage, 2) %</span>
            </div>

            <div class="card-body d-flex flex-column">

                <div style="width:auto; margin:30px; margin-top: 5px;">
                    <img width="100%" src="@(item.setDTO.BoxImage?.Url?? item.setDTO.AdditionalImages?.FirstOrDefault()?.Url ?? item.setDTO.Images?.FirstOrDefault()?.Url)" />
                </div>

                <span>Set Id: @item.setDTO.Id</span>
                <span>Piece Count: @item.setDTO.PieceCount</span>
            </div>

        </div>

    }
</div>

<p>
    <a asp-action="Search">Search</a>
</p>