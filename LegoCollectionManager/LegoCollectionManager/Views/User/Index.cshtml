@model LegoCollectionManager.Models.User

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="User" asp-action="Login" method="get">
            <div class="form-group">
                <label asp-for=Username class="control-label" value="Enter Username">Username</label>
                <input asp-for=Username />
            </div>
            <div class="form-group">
                <label asp-for=Password class="control-label" value="Enter Password">Password</label>
                <input asp-for=Password />
            </div>
            <div class="form-group">
                <label asp-for=UserAvatars class="control-label">Avatar</label>
                <select asp-for=UserAvatars class="form-control" asp-items=ViewBag.Avatars></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Create">Register</a>
</p>