@model LegoCollectionManager.SetInformation.SetInformation;

@{
    ViewData["Title"] = "Set Information";
}

<style>
    img {
        max-width: 400px;
    }
</style>

<div>
    <h1>@Model.Name</h1>
    <p>@Model.Id</p>
    <p>Pieces: @Model.PieceCount</p>

    <h2>Instructions</h2>
    @for (int i = 0; i < Model.Instructions.Length; i++)
    {        
        <a href="@Model.Instructions[i].FileUrl" target="_blank">
            <img src="@Model.Instructions[i].ImageUrl"/>
        </a>
    }

    <h2>Images</h2>
    @for (int i = 0; i < Model.Images.Length; i++)
    {   
        <img src="@Model.Images[i].Url"/>
    }

    <h2>Additional Images</h2>
    @for (int i = 0; i < Model.AdditionalImages.Length; i++)
    {   
        <img src="@Model.AdditionalImages[i].Url"/>
    }
</div>