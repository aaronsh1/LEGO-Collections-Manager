@model LegoCollectionManager.Models.Set

@{
    ViewData["Title"] = "Edit";
    var SetId = ViewBag.SetId;
}

<h1>Edit</h1>

<h4>Set</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SetId" />
            <div class="form-group">
                <label asp-for="SetName" class="control-label"></label>
                <input asp-for="SetName" class="form-control" />
                <span asp-validation-for="SetName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PiecesAmount" class="control-label"></label>
                <input asp-for="PiecesAmount" class="form-control" />
                <span asp-validation-for="PiecesAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SetCategory" class="control-label"></label>
                <select asp-for="SetCategory" class="form-control" asp-items="ViewBag.SetCategory"></select>
                <span asp-validation-for="SetCategory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
             <a asp-action="$"EditPieces/{SetId}"" class="btn btn-primary">Edit Pieces</a>
        </form>
    </div>
   
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
